@model RentACarTI2.Models.Repair
@{
    ViewBag.RepairActive = "active";
    ViewBag.Page = "Repairs";
    ViewBag.Title = "Rent a Car - Create Repair";
}

<div class="content">
    <div class="container-fluid">
        <form class="form-row card" method="POST" action="/Admin/Repair/Create">
            <input type="hidden" name="VehicleID" value="@ViewBag.VehicleID" />
            <input type="hidden" name="Rental_ReturnID" value="@ViewBag.ReturnID" />
            <div class="card-header card-header-primary">
                <h4 class="card-title">Create Repair</h4>
                <p class="card-category">Create a new repair</p>
            </div>
            <div class="card-body row">
                <div class="col-12 col-sm-6 input-group form-group no-border">
                    <input type="text" name="ResponsibleCompany" class="form-control" placeholder="Responsible Company...">
                </div>
                <div class="col-12 col-sm-6 input-group form-group no-border">
                    <input type="text" name="Costs" class="form-control" placeholder="Costs (if known)...">
                </div>
                <div class="col-12 col-sm-6 input-group form-group no-border mt-3">
                    <label class="ml-3" for="start-date">Start Date</label>
                    <input id="start-date" name="StartDate" type="date" class="form-control">
                </div>
                <div class="col-12 col-sm-6 input-group form-group no-border mt-3">
                    <label class="ml-3" for="return-date">Return Date (if known)</label>
                    <input id="return-date" name="ReturnDate" type="date" class="form-control">
                </div>
                <div class="col-12 input-group form-group no-border mt-3">
                    <textarea class="form-control" name="Description" placeholder="Description..."></textarea>
                </div>

                <div class="row col-12">
                    <div class="col-12 col-sm-6">
                        @if(ViewBag.ReturnID != null) 
                        {
                            <a href="/Admin/Return/Index" class="btn mt-3">Back to Returns</a>
                        }
                        else 
                        {
                            <a href="/Admin/Vehicle/Index" class="btn mt-3">Back to Vehicles</a>
                        }
                        
                    </div>
                    <div class="col-12 col-sm-6">
                        <button type="submit" class="btn btn-primary mt-3 float-right">Create Repair</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="/Admin/Content/js/material-dashboard.js"></script>
    <script>
        // SHOW MESSAGE BASED ON RESPONSE
        var response = '@ViewBag.Response';
        if (response == "repair exists") {
            md.showNotification('top', 'center', 'There is an repair for this return, please edit instead', 1, 2);
        }
        else if (response == "repair exists for vehicle") {
            md.showNotification('top', 'center', 'There is an opened repair for this vehicle, please edit instead', 1, 2);
        }
    </script>
}